<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


        <!-- Navigation Drawer -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainbg"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <!-- Top bar with home icon, profile picture, and notifications inside a CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/top_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:elevation="40dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:id="@+id/top_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/nav" />

                    <ImageView
                        android:id="@+id/home_icon"
                        android:layout_width="28dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/icon"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/home_icon"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Home"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/profile_circle"
                        android:src="@drawable/profile_picture" />

                    <ImageView
                        android:id="@+id/notification_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/profile_pic"
                        android:src="@drawable/notifications" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Welcome Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/welcome_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/welcome"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/good_morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_variable"
                        android:text="Good Morning"
                        android:textColor="@android:color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/good_morning"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Arjun"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/welcome_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/urbanist_variable"
                        android:text="Welcome Back to PowerBots"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/welcome_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/space" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <GridLayout
                android:id="@+id/stats_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:columnCount="2">

                <!-- Total Chats Assigned -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Total Chats Assigned"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- New Chats -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textColor="@color/white11"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="New Chats"
                            android:textAlignment="textStart"
                            android:textColor="@color/white11"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="end">

                        <ProgressBar
                            android:id="@+id/progress_circular"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circular_progress_drawable"
                            android:rotation="270" />

                        <TextView
                            android:id="@+id/tv_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="100%"
                            android:textColor="@color/white11"
                            android:textSize="10sp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <!-- Ongoing Chats -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textColor="@color/white16"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Ongoing"
                            android:textAlignment="textStart"
                            android:textColor="@color/white16"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="end">

                        <ProgressBar
                            android:id="@+id/progress_circular_ongoing"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circular_progress_ongoing"
                            android:rotation="270" />

                        <TextView
                            android:id="@+id/tv_percentage_ongoing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="75%"
                            android:textColor="@color/white16"
                            android:textSize="10sp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <!-- Resolved Chats -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textColor="@color/white28"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Resolved"
                            android:textAlignment="textStart"
                            android:textColor="@color/white28"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="end">

                        <ProgressBar
                            android:id="@+id/progress_circular_resolved"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circular_progress_resolved"
                            android:rotation="270" />

                        <TextView
                            android:id="@+id/tv_percentage_resolved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="65%"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="10sp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <!-- follow-up -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textColor="@color/white13"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Follow-Up"
                            android:textAlignment="textStart"
                            android:textColor="@color/white13"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="end">

                        <ProgressBar
                            android:id="@+id/progress_circular_followup"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circular_progress_followup"
                            android:rotation="270" />

                        <TextView
                            android:id="@+id/tv_percentage_followup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="89%"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="10sp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <!-- Chat Expiration-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textColor="@color/white15"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:text="Chat Expiration"
                            android:textAlignment="textStart"
                            android:textColor="@color/white15"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="end">

                        <ProgressBar
                            android:id="@+id/progress_circular_expiration"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circular_progress_chatexpiration"
                            android:rotation="270" />

                        <TextView
                            android:id="@+id/tv_percentage_expiration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="90%"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="10sp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </GridLayout>

            <!-- Expert Advice Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/expert_advice_image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/urbanist_bold"
                        android:gravity="center"
                        android:text="Need an Expertâ€™s Advice?"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/urbanist_variable"
                        android:gravity="center"
                        android:text="Engage with your customers on a deeper level, connect you WhatsApp business and let us handle the hard tasks for you"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="#3A3AFF"
                            android:drawableLeft="@drawable/scheldule_icon"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/urbanist_variable"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="Schedule Live Demo"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#3A3AFF"
                            android:fontFamily="@font/urbanist_variable"
                            android:lines="1"
                            android:text="Contact Support Team"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- WhatsApp Conversation Credits Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- WhatsApp Conversation Credits -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="WhatsApp Conversation \nCredits"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold|normal" />

                    <!-- Total Credits -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/urbanist_variable"
                        android:paddingBottom="8dp"
                        android:text="Total Credits: 1500"
                        android:textColor="#808080"
                        android:textSize="14sp" />

                    <!-- Linear Progress Bar -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Blue Progress Bar -->
                        <ProgressBar
                            android:id="@+id/progressBarBlue"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/progress_bar_blue" />

                        <!-- Red Progress Bar (Overlays the Blue Progress Bar) -->
                        <ProgressBar
                            android:id="@+id/progressBarRed"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:elevation="4dp"
                            android:indeterminate="false"
                            android:max="1000"
                            android:progress="80"
                            android:progressDrawable="@drawable/progress_bar_red" />

                    </FrameLayout>

                    <!-- Credits Information -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Left Credits -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/urbanist_variable"
                            android:text="500/500"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <!-- Free Credits -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/urbanist_variable"
                            android:gravity="center_horizontal"
                            android:paddingStart="10sp"
                            android:text="600/1000 free"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <!-- Credits Left -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/urbanist_variable"
                            android:text="900 left"
                            android:textColor="#808080"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Buy More Credits Button -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#3A3AFF"
                        android:fontFamily="@font/urbanist_variable"
                        android:text="Buy more Credits"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Current Plan Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/currentplan_card_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/urbanist_variable"
                            android:gravity="start"
                            android:text="Current Plan"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="end"
                            android:text="Free Plan"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="4dp"
                        android:max="100"
                        android:progress="40"
                        android:progressDrawable="@drawable/progressbar_currentplan" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/urbanist_variable"
                            android:text="4/15"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/urbanist_variable"
                            android:gravity="end"
                            android:text="4 days left"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/urbanist_variable"
                        android:text="Upgrade Now"
                        android:textColor="#891926" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Updates Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Updates"
                        android:textAlignment="textStart"
                        android:textColor="#3A3AFF"
                        android:textSize="18sp" />

                    <!-- Update Content -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="16dp"
                                android:src="@drawable/pushing_doller_coin" />

                            <!-- Text 1 -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/urbanist_variable"
                                android:gravity="center"
                                android:text="If you have verified Facebook Business \nManager, connect now to get"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="16dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <!-- WCC 1 -->
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:gravity="end"
                                    android:text="1000 WCC"
                                    android:textColor="@color/white22"
                                    android:textSize="18sp" />

                                <!-- Free 1 -->
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:text="Free"
                                    android:textColor="#3A3AFF"
                                    android:textSize="14sp" />
                            </LinearLayout>


                            <!-- Text 2 -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/urbanist_variable"
                                android:gravity="center"
                                android:text="Don't have a verified Facebook Business Manager, don't worry! We've got \nyou covered by providing"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <!-- WCC 2 -->
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:gravity="end"
                                    android:text="250 WCC"
                                    android:textColor="@color/white22"
                                    android:textSize="18sp" />

                                <!-- Free 2 -->
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/urbanist_bold"
                                    android:text="Free"
                                    android:textColor="#3A3AFF"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Navigation Arrows and Indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_arrow_left" />

                        <View
                            android:layout_width="15dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/circle_indicator" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_arrow_right" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
